<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:background="@drawable/view_card_background"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
    <RelativeLayout android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/stackWidgetItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <ImageView android:id="@+id/widgetnewspic"
                   android:background="#e1e1e1"
                   android:layout_width="match_parent"
                   android:layout_height="100dp"
                   android:scaleType="fitXY"
                   android:adjustViewBounds="true"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentTop="true" />
        <TextView android:textSize="14dp"
                  android:textColor="@color/stack_widget_item_headline_color"
                  android:ellipsize="end" android:id="@+id/widgetheading"
                  android:paddingLeft="6dp" android:paddingTop="3dp"
                  android:paddingRight="6dp" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:maxLines="2"
                  android:lines="2" android:layout_below="@id/widgetnewspic"
                  android:layout_alignParentLeft="true" />
        <!--<TextView app:textSize="12dp" app:textColor="@color/stack_widget_item_category_color" app:ellipsize="end" app:id="@+id/category" app:paddingLeft="6dp" app:paddingRight="6dp" app:paddingBottom="5dp" app:layout_width="match_parent" app:layout_height="wrap_content" app:maxLines="1" app:layout_below="@id/headline" app:layout_centerHorizontal="true" app:fontFamily="sans-serif-light" />-->
    </RelativeLayout>
</FrameLayout>


