<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       xmlns:ads="http://schemas.android.com/apk/res-auto"
       tools:context="com.sieae.jamaicaobserver.wordpress.WordpressDetailActivity"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <com.sieae.jamaicaobserver.util.TrackingScrollView
            android:id="@+id/scroller"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

           <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/image"
                        android:elevation="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/image_height_wordpress"
                        android:background="@color/actionBarColor"
                        android:scaleType="centerCrop"/>
                
                 <LinearLayout 
              			android:id="@+id/contentholder"
              			android:background="@android:color/white"
              			android:elevation="20dp"
              			android:orientation="vertical"
             			android:layout_width="match_parent"
              			android:layout_height="fill_parent">

                	<LinearLayout
                	    android:id="@+id/content"
                	    android:layout_width="match_parent"
                	    android:layout_height="wrap_content"
                	    android:orientation="vertical"
                	    android:paddingLeft="@dimen/activity_detail_horizontal_margin"
                	    android:paddingRight="@dimen/activity_detail_horizontal_margin" >
              				
                	      <TextView
        					android:layout_width="wrap_content"
       						android:layout_height="wrap_content"
        					android:textAppearance="?android:attr/textAppearanceLarge" 
        					android:id="@+id/title" 
        					android:paddingTop="20dp"
        					android:paddingBottom="10dp"
        					android:fontFamily="sans-serif-condensed"/>
                	      
                	      <TextView
                	        android:id="@+id/dateauthorview"
        					android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
        					android:textDirection="locale"
        					android:fontFamily="sans-serif-thin"
        					android:paddingBottom="10dp"
							  android:alpha="0" />

                   		 <ProgressBar
                    			android:id="@+id/progressBar"
                    			style="?android:attr/progressBarStyleLarge"
                    			android:paddingTop="20dp"
                    			android:layout_width="fill_parent"
                    			android:layout_height="fill_parent" />
                    
    					  <WebView 
    				       			android:id="@+id/context"
    				        		android:visibility="gone"
        							android:focusable="false"
        							android:focusableInTouchMode="false"
    				        		android:layout_width="match_parent"
              						android:layout_height="wrap_content"/>
    				
    				</LinearLayout>
    				
    				<com.google.android.gms.ads.AdView 
          					android:id="@+id/adView"
         					android:layout_width="fill_parent"
          					android:layout_height="wrap_content"
          					android:layout_marginTop="10dp"
          					ads:adUnitId="@string/ad_id"
          					android:descendantFocusability="blocksDescendants"
          					android:visibility="@string/ad_visibility"
          					ads:adSize="SMART_BANNER"/> 
    				
    				<View
        					android:layout_width="fill_parent"
        					android:layout_height="1dp"
        					android:layout_marginTop="10dp"
        					android:background="@android:color/darker_gray" />
    				
    			    <Button
        					android:id="@+id/favoritebutton"
        					style="@style/CardActionButton"
        					android:background="@android:color/transparent"
        					android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
        					android:layout_marginRight="10dp"
        					android:text="@string/favorite_button" />

					</LinearLayout>
            </LinearLayout>


    </com.sieae.jamaicaobserver.util.TrackingScrollView>
    
    <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"     
       android:background="@drawable/toolbar_gradient">
       
        <include
        	android:id="@+id/toolbar_actionbar"
        	layout="@layout/toolbar_transparent"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"/>
   
   	</RelativeLayout>

</RelativeLayout>